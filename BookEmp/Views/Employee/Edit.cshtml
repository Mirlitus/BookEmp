<!-- Полностью аналогичен файлу Create -->
@model BookEmp.Models.Employee

@{
    ViewData["Title"] = "Редактировать";
}

<h4>Редактировать информацию о сотруднике:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ID" />
                <label asp-for="FIO" class="control-label"></label>
                <input asp-for="FIO" class="form-control" />
                <span asp-validation-for="FIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="DepID" class="form-control" asp-items="@(new SelectList(ViewBag.DepList,"ID","DepName"))" onchange="document.getElementById('DepName').value = this.options[this.selectedIndex].text">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DepName" class="control-label"></label>
                <input id="DepName" asp-for="DepName" class="form-control" />
                <span asp-validation-for="DepName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhotoURL" class="control-label"></label>
                <input asp-for="PhotoURL" class="form-control" />
                <span asp-validation-for="PhotoURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="EmployeesList" class="btn btn-outline-success">Реестр сотрудников</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#DepID").change(function () {
            var selectedDep = $("#DepID option:selected").text();
            $("#DepName").val(selectedDep);
        });
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}